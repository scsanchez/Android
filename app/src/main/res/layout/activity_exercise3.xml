<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Exercise3">

    <TableRow
        android:id="@+id/tableRow6"
        android:layout_width="394dp"
        android:layout_height="54dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/tableRow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/ex3_text"
            android:layout_width="277dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:ems="10"
            android:gravity="right"
            android:hint="0"
            android:inputType="number"
            android:textSize="30sp" />

        <Button
            android:id="@+id/ex3_buttonc"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:text="C"
            android:textSize="24sp" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow"
        android:layout_width="394dp"
        android:layout_height="54dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/tableRow2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/ex3_button7"
            android:layout_width="90dp"
            android:layout_height="54dp"
            android:layout_marginRight="5dp"
            android:text="7"
            android:textSize="24sp" />

        <Button
            android:id="@+id/ex3_button8"
            android:layout_width="90dp"
            android:layout_height="55dp"
            android:layout_marginRight="5dp"
            android:text="8"
            android:textSize="24sp" />

        <Button
            android:id="@+id/ex3_button9"
            android:layout_width="90dp"
            android:layout_height="54dp"
            android:layout_marginRight="5dp"
            android:text="9"
            android:textSize="24sp" />

        <Button
            android:id="@+id/ex3_button_divide"
            android:layout_width="90dp"
            android:layout_height="54dp"
            android:text="รท"
            android:textSize="24sp" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="394dp"
        android:layout_height="54dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/tableRow4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/ex3_button1"
            android:layout_width="90dp"
            android:layout_height="54dp"
            android:layout_marginRight="5dp"
            android:text="1"
            android:textSize="24sp" />

        <Button
            android:id="@+id/ex3_button2"
            android:layout_width="90dp"
            android:layout_height="54dp"
            android:layout_marginRight="5dp"
            android:text="2"
            android:textSize="24sp" />

        <Button
            android:id="@+id/ex3_button3"
            android:layout_width="90dp"
            android:layout_height="54dp"
            android:layout_marginRight="5dp"
            android:text="3"
            android:textSize="24sp" />

        <Button
            android:id="@+id/ex3_button_subtract"
            android:layout_width="90dp"
            android:layout_height="54dp"
            android:gravity="center"
            android:text="-"
            android:textSize="34sp" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="394dp"
        android:layout_height="54dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/tableRow3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/ex3_button4"
            android:layout_width="90dp"
            android:layout_height="54dp"
            android:layout_marginRight="5dp"
            android:text="4"
            android:textSize="24sp" />

        <Button
            android:id="@+id/ex3_button5"
            android:layout_width="90dp"
            android:layout_height="55dp"
            android:layout_marginRight="5dp"
            android:text="5"
            android:textSize="24sp" />

        <Button
            android:id="@+id/ex3_button6"
            android:layout_width="90dp"
            android:layout_height="54dp"
            android:layout_marginRight="5dp"
            android:text="6"
            android:textSize="24sp" />

        <Button
            android:id="@+id/ex3_button_multiply"
            android:layout_width="90dp"
            android:layout_height="54dp"
            android:text="x"
            android:textSize="20sp" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="394dp"
        android:layout_height="54dp"
        android:layout_marginBottom="188dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/button_back3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/ex3_button0"
            android:layout_width="90dp"
            android:layout_height="54dp"
            android:layout_marginRight="5dp"
            android:text="0"
            android:textSize="24sp" />

        <Button
            android:id="@+id/ex3_button_equal"
            android:layout_width="188dp"
            android:layout_height="54dp"
            android:layout_marginRight="5dp"
            android:text="="
            android:textSize="24sp" />

        <Button
            android:id="@+id/ex3_button_add"
            android:layout_width="90dp"
            android:layout_height="54dp"
            android:text="+"
            android:textSize="24sp" />

    </TableRow>

    <Button
        android:id="@+id/button_back3"
        android:layout_width="244dp"
        android:layout_height="45dp"
        android:layout_marginBottom="40dp"
        android:text="Volver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="394dp"
        android:layout_height="54dp"
        android:layout_marginBottom="64dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/tableRow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/ex3_text1"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="right"
            android:hint="0"
            android:inputType="number"
            android:textSize="30sp" />
    </TableRow>

</androidx.constraintlayout.widget.ConstraintLayout>