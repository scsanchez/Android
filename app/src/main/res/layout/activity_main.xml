            android:gravity="center">

            <Button
                android:id="@+id/button_ex5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Juegos" />

            <Button
                android:id="@+id/button_ex6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
